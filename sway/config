##########################################
#########    MY OWN SETTINGS    ##########
##########################################

#Archlinux theme
client.focused #0088CC #0088CC #ffffff #dddddd #0088CC
client.focused_inactive #333333 #333333 #888888 #292d2e #0088CC
client.unfocused #333333 #333333 #888888 #292d2e #0088CC
client.urgent #2f343a #900000 #ffffff #900000 #0088CC

# Font Configuration
title_align center
titlebar_padding 1
font pango:Noto Sans 8

# Scale Configuration
output eDP-1 pos 0 0 mode --custom 1600x900@60Hz

# Input Configuration:
input "1112:24577:Genius_Wireless_Device" {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

input "2:14:ETPS/2_Elantech_Touchpad" {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_layout us(intl)
}

input "6127:24648:ThinkPad_Compact_Bluetooth_Keyboard_with_TrackPoint" {
    xkb_layout us(intl)
}

input "1112:390:KYE_SYSTEMS_CORP._Wired_Mouse" {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

# Enable/disable caps mode
mode "caps" {
  bindsym Caps_Lock mode "default"
}
bindsym Caps_Lock mode "caps"

# Polkit authorization
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# WOB
exec mkfifo $SWAYSOCK.wob && tail -f $SWAYSOCK.wob | wob

# WOB volume
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2%+ unmute && amixer sget Master | grep 'Right:' | awk -F'[][]' '{ print substr($2, 0, length($2)-1) }' > $SWAYSOCK.wob
bindsym XF86AudioLowerVolume exec amixer -q set Master 2%- unmute && amixer sget Master | grep 'Right:' | awk -F'[][]' '{ print substr($2, 0, length($2)-1) }' > $SWAYSOCK.wob
bindsym XF86AudioMute exec (amixer get Master | grep off > /dev/null && amixer -q set Master unmute && amixer sget Master | grep 'Right:' | awk -F'[][]' '{ print substr($2, 0, length($2)-1) }' > $SWAYSOCK.wob) || (amixer -q set Master mute && echo 0 > $SWAYSOCK.wob)

# MIC
bindsym --release XF86AudioMicMute exec amixer -q set Capture toggle
bindsym $mod+Shift+m exec amixer -q set Capture toggle

# WOB Light
bindsym XF86MonBrightnessUp exec light -A 5 && light -G | cut -d'.' -f1 > $SWAYSOCK.wob
bindsym XF86MonBrightnessDown exec light -U 5 && light -G | cut -d'.' -f1 > $SWAYSOCK.wob

# screenshot
bindsym --release print exec grim -g "$(slurp)" - | swappy -f -

# lock computer
bindsym $mod+Shift+x exec swaylock -i /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png -s fill

# remove border for audacious
for_window [app_id="audacious"] border csd .
for_window [app_id="audacious"] sticky enable 

# Let the windows created by Farge be floating
for_window [app_id="sxiv"] floating enable

# Let the windows created by gnome-calculator be floating
for_window [app_id="gnome-calculator"] floating enable
for_window [app_id="gnome-calculator"] border none

# remove ulauncher border 
for_window [app_id="ulauncher"] border none

# Opacity changes
bindsym --whole-window --border $mod+Shift+button4 opacity plus .1
bindsym --whole-window --border $mod+Shift+button5 opacity minus .1

include /etc/sway/config.d/*
